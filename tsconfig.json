{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable"],
    "target": "es2016",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts","**/*.tsx", "icons/*.*"],
  "exclude": ["node_modules"]
}
